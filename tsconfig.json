{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": false,
		"types": [
			"node",
			"vscode",
			"mocha",
			"better-sqlite3"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"server"
	]
}