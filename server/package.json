{
  "name": "smart-indexer-server",
  "version": "0.0.4",
  "description": "Language server for Smart Indexer",
  "main": "./out/server.js",
  "scripts": {
    "compile": "tsc -p . && pnpm run copy-wasm",
    "copy-wasm": "shx cp node_modules/sql.js/dist/sql-wasm.wasm out/",
    "watch": "tsc -p . --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "p-limit": "^3.1.0",
    "shx": "^0.3.4",
    "sql.js": "^1.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.1.0"
  }
}
