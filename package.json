{
  "name": "smart-indexer",
  "displayName": "Smart Indexer",
  "description": "Fast IntelliSense with persistent cache and Git-aware incremental indexing",
  "version": "1.61.1",
  "icon": "icon.png",
  "publisher": "psternik",
  "repository": {
    "type": "git",
    "url": "https://github.com/p-sternik/smart-indexer.git"
  },
  "engines": {
    "vscode": "^1.106.1",
    "node": ">=20.0.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-indexer.showQuickMenu",
        "title": "Smart Indexer: Quick Menu"
      },
      {
        "command": "smart-indexer.rebuildIndex",
        "title": "Smart Indexer: Rebuild Index"
      },
      {
        "command": "smart-indexer.clearCache",
        "title": "Smart Indexer: Clear Cache"
      },
      {
        "command": "smart-indexer.showStats",
        "title": "Smart Indexer: Show Statistics"
      },
      {
        "command": "smart-indexer.inspectIndex",
        "title": "Smart Indexer: Inspect Index"
      },
      {
        "command": "smart-indexer.findDeadCode",
        "title": "Smart Indexer: Find Dead Code (Beta)"
      },
      {
        "command": "smart-indexer.findDeadCodeInFolder",
        "title": "Smart Indexer: Find Dead Code in Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "smart-indexer.findDeadCodeInFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Smart Indexer",
      "properties": {
        "smartIndexer.cacheDirectory": {
          "type": "string",
          "default": ".smart-index",
          "description": "Directory name for index cache (relative to workspace root)"
        },
        "smartIndexer.enableGitIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Git-aware incremental indexing"
        },
        "smartIndexer.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/out/**",
            "**/.git/**",
            "**/build/**",
            "**/*.min.js"
          ],
          "description": "Glob patterns to exclude from indexing"
        },
        "smartIndexer.maxIndexedFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size to index in bytes (default: 1MB)"
        },
        "smartIndexer.maxFileSizeMB": {
          "type": "number",
          "default": 50,
          "description": "Maximum file size in MB that Smart Indexer will attempt to index"
        },
        "smartIndexer.maxCacheSizeMB": {
          "type": "number",
          "default": 500,
          "description": "Approximate soft limit for on-disk index/cache size in MB"
        },
        "smartIndexer.maxConcurrentIndexJobs": {
          "type": "number",
          "default": 4,
          "description": "Maximum number of parallel indexing jobs (1-16)"
        },
        "smartIndexer.enableBackgroundIndex": {
          "type": "boolean",
          "default": true,
          "description": "Enable background indexing of the entire workspace"
        },
        "smartIndexer.textIndexing.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable text-based indexing for non-TypeScript/JavaScript files (Java, Go, C#, Python, Rust, C++)"
        },
        "smartIndexer.staticIndex.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable loading of pre-generated static index"
        },
        "smartIndexer.staticIndex.path": {
          "type": "string",
          "default": "",
          "description": "Path to static index file or directory (relative to workspace or absolute)"
        },
        "smartIndexer.indexing.maxConcurrentWorkers": {
          "type": "number",
          "default": 4,
          "description": "Maximum number of concurrent indexing workers (1-16)"
        },
        "smartIndexer.indexing.batchSize": {
          "type": "number",
          "default": 50,
          "description": "Number of files to process per indexing batch"
        },
        "smartIndexer.indexing.useFolderHashing": {
          "type": "boolean",
          "default": true,
          "description": "Use Merkle-style folder hashing to skip unchanged directories"
        },
        "smartIndexer.mode": {
          "type": "string",
          "enum": [
            "standalone",
            "hybrid"
          ],
          "default": "hybrid",
          "description": "Operation mode: 'standalone' uses only Smart Indexer, 'hybrid' delegates to VS Code's built-in TypeScript service when available"
        },
        "smartIndexer.hybridTimeoutMs": {
          "type": "number",
          "default": 100,
          "description": "Timeout in milliseconds for delegating to native TypeScript service in hybrid mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "clean": "node -e \"const fs=require('fs');['dist','out','server/out'].forEach(d=>{if(fs.existsSync(d))fs.rmSync(d,{recursive:true,force:true})})\"",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run compile:client && pnpm run compile:server",
    "compile:client": "node esbuild.js",
    "compile:server": "node esbuild.server.js",
    "watch": "pnpm run -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:server": "node esbuild.server.js --watch",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production && pnpm run compile:server",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit && tsc -p server/tsconfig.json --noEmit",
    "lint": "eslint src server/src",
    "test": "vscode-test",
    "build": "pnpm run compile",
    "rebuild": "pnpm run clean && pnpm run build",
    "vsix": "pnpm run clean && pnpm run package && node scripts/publish.js package",
    "publish": "node scripts/publish.js publish"
  },
  "devDependencies": {
    "@msgpack/msgpack": "^3.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/typescript-estree": "^8.48.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "chokidar": "^4.0.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "minimatch": "^10.1.1",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^23.1.1",
    "semantic-release-vsce": "^5.7.4",
    "simple-git": "^3.30.0",
    "sql.js": "^1.13.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.3",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/vsce-sign",
      "esbuild",
      "keytar",
      "sql.js"
    ]
  }
}
